{
  "name": "zenn-blog",
  "version": "1.0.0",
  "description": "zenn連携用のコンテンツリポジトリです。",
  "homepage": "https://github.com/SiMiTaKu/zenn-blog#readme",
  "bugs": {
    "url": "https://github.com/SiMiTaKu/zenn-blog/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SiMiTaKu/zenn-blog.git"
  },
  "license": "ISC",
  "author": "SiMiTaKu",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "dev": "npx zenn preview # ローカルサーバーでプレビューを表示します",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "lint": "npx textlint **/*.md",
    "lint:fix": "npx textlint **/*.md --fix && prettier --write .",
    "new:article": "npx zenn new:article # 新しい記事を作成します",
    "new:book": "npx zenn new:book # 新しい書籍を作成します"
  },
  "dependencies": {
    "textlint-rule-ja-hiragana-fukushi": "^1.3.0",
    "textlint-rule-ja-hiragana-hojodoushi": "^1.1.0",
    "textlint-rule-ja-hiragana-keishikimeishi": "^1.1.0",
    "textlint-rule-ja-no-redundant-expression": "^4.0.1",
    "textlint-rule-ja-no-weak-phrase": "^2.0.0",
    "textlint-rule-no-doubled-joshi": "^5.1.1",
    "textlint-rule-preset-jtf-style": "^2.3.14",
    "textlint-rule-prh": "^6.1.0",
    "zenn-cli": "^0.2.11"
  },
  "devDependencies": {
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.8.1",
    "textlint": "^14.8.4",
    "textlint-rule-no-todo": "^2.0.1"
  },
  "lint-staged": {
    "*.{md}": [
      "npm run lint:fix",
      "npm run lint"
    ]
  }
}
